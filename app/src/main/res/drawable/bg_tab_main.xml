<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:radius="50dp" />
            <padding android:left="10dp" android:bottom="8dp" android:right="10dp" android:top="8dp" />
            <solid android:color="@color/blue" />
            <stroke android:color="@color/light_blue" android:width="1dp" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="50dp" />
            <padding android:left="10dp" android:bottom="8dp" android:right="10dp" android:top="8dp" />
            <solid android:color="@color/blue" />
            <stroke android:color="@color/light_blue" android:width="1dp" />
        </shape>
    </item>
    <item
        >
        <shape>
            <corners android:radius="50dp"/>
            <padding android:left="10dp" android:bottom="8dp" android:right="10dp" android:top="8dp"/>
            <solid android:color="@color/gray_dark"/>
            <stroke android:color="@color/gray_light" android:width="1dp"/>
        </shape>
        </item>
</selector>