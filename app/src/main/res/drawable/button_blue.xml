<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape>
            <corners android:radius="5dp" />
            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />
            <solid android:color="#3AB0EE" />
            <stroke android:width="0.5dp" android:color="@color/light_blue" />
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape>
            <corners android:radius="5dp" />
            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />
            <solid android:color="#3AB0EE" />
            <stroke android:width="0.5dp" android:color="@color/light_blue" />
        </shape>
    </item>
    <item>
        <shape>
            <corners android:radius="5dp" />
            <padding android:bottom="8dp" android:left="10dp" android:right="10dp" android:top="8dp" />
            <gradient android:angle="135" android:centerColor="@color/light_blue" android:endColor="#3AB0EE" android:startColor="#3AB0EE" />
        </shape>
    </item>
</selector>